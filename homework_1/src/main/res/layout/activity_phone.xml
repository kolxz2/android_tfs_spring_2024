<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity">

    <Button
        android:id="@+id/btStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homework_1_click_to_start_scanning_you_contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWarningToTheUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="112dp"
        android:text="@string/homework_1_security_message_text"
        app:layout_constraintBottom_toTopOf="@+id/btStartService"
        app:layout_constraintEnd_toEndOf="@+id/btStartService"
        app:layout_constraintStart_toStartOf="@+id/btStartService" />
</androidx.constraintlayout.widget.ConstraintLayout>