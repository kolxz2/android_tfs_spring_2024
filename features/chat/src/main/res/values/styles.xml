<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundedEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>

    <style name="NormalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
    </style>
</resources>